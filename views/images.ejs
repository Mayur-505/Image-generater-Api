
<!-- images.ejs -->
<html>
  <head>
    <title>Input Form</title>
    <style>
        .loader {
          display: block;
          border: 8px solid #f3f3f3; /* Light grey */
        border-top: 8px solid #3498db; /* Blue */
        border-radius: 50%;
        width: 50px;
        height: 50px;
        position: absolute;
        top: 50%;
        left: 50%;
        animation: spin 2s linear infinite;
          /* Your loader styles here */
        }
        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
            }
            #submit-form{
                display: block;
            }

            .main-div{
                height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
            }
      </style>
  </head>
<body style="background-color: #f6e3cd;">
<div>

    <% results.forEach((item,index) => { %>
        <div class="image-container">
          <div class="loader"></div>
          <p>Blockchain : <%=item.blockchain %> </p>
          <p>Image <%=index+1%></p>
          <img src="<%= item.image_url %>"  onload="this.parentNode.querySelector('.loader').style.display='none'">
          <!-- <img src="https://gateway.pinata.cloud/ipfs/QmZt4PZyCaqyLfcKhziQGsm6nYJUcFY4kh8C3yrj9c5F9t"  onload="this.parentNode.querySelector('.loader').style.display='none'"> -->
        </div>
      <% }); %>

</div>
</body>
</html>